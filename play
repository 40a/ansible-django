#!/bin/bash
# Run with:
# ./play production all
# ./play production webservers
# ./play production dbservers
# ./play production webservers --tags=pip

INVENTORY=$1
ROLE=${2:-"site"}

HEREDIR=$(dirname $0)

echo "Configuring ..."
echo "inventory: ${INVENTORY}"
echo "role: ${ROLES}"

/usr/bin/env ansible-playbook -K -i $INVENTORY "${HEREDIR}/playbook/${ROLE}.yml" "${@:3}"
